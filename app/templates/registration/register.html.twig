{% extends 'base_login_register.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <body style="background-color:#6f42c1
!important;">


    <div class="mt-3">
        <img class="img w25 d-block m-auto" src="{{ asset('images/logo_mds.png') }}" alt="logo école">
    </div>

    <h3 class="formregister1 mt-5 text-center">Inscription</h3>

    <div class="formregister container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Crée un compte !</h1>
                            </div>

                            {{ form_start(registrationForm, {
                                'attr': {
                                    'class': 'user'
                                }
                            }) }}

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_row(registrationForm.firstname, {
                                        label: 'Prénom'
                                    }) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(registrationForm.lastname, {
                                        label: 'Nom'
                                    }) }}
                                </div>
                            </div>

                            <div class="form-group">
                                {{ form_row(registrationForm.room, {
                                    label: 'Classe'
                                }) }}
                            </div>

                            <div class="form-group">
                                {{ form_row(registrationForm.mail, {
                                    label: 'Adresse e-mail'
                                }) }}
                            </div>

                            <div class="form-group ">
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Mot de passe'
                                }) }}
                            </div>

                            <button type="submit" class="btn btn-primary btn-user btn-block">Créer un compte
                            </button>

                            <hr>

                            {{ form_end(registrationForm) }}
                            <hr>
                            <div class="text-center">
                                <a class="small" href="{{ path('app_login') }}">Vous avez déjà un compte ?
                                    Connectez-vous !</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </body>
    <script src="../../public/js/test.js"></script>

{% endblock %}
